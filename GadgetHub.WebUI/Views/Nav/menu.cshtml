@model IEnumerable<string>

<nav class="navbar navbar-expand-sm bg-dark navbar-dark">
	<div class="container-fluid">
		<a class="navbar-brand" href="#">GADGET HUB</a>
		<ul class="navbar-nav">
			<li class="nav-item">
				@Html.ActionLink("Home", "List", "Product", null, new { @class = "nav-link active" })
			</li>
			@foreach (var link in Model)
			{
				<li class="nav-item">
					@Html.RouteLink(link, new
					{
						controller = "Product",
						action = "List",
						category = link,
						Page = 1
					},
						 new
						 {
							 @class = "nav-link" + (link == ViewBag.SelectedCategory ? " active" : "")
						 })
				</li>
			}
		</ul>
	</div>
</nav>
