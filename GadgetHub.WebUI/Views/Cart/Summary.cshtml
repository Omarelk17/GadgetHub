@model GadgetHub.Domain.Entities.Cart

<div class="card cart-summary">
	<div class="card-header">
		<h3 class="card-title">Cart Summary</h3>
	</div>
	<div class="card-body">
		<p class="card-text">@Model.Lines.Count() items in your cart</p>
		<p class="card-text">Total: <strong>@Model.ComputeTotalValue().ToString("c")</strong></p>
	</div>
	<div class="card-footer">
		<a href="@Url.Action("Index", "Cart")" class="btn btn-primary">View Cart</a>
	</div>
</div>
