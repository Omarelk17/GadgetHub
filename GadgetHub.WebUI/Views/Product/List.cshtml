@model GadgetHub.WebUI.Models.ProductsListViewModel

@{
	ViewBag.Title = "Products";
}

@foreach (var p in Model.Products)
{
	<div class="card p-3 bg-light text-dark mb-2">
		<h3>
			<strong>Name: @p.Name</strong>
			<span class="badge bg-primary float-end">Price: @p.Price.ToString("c")</span>
		</h3>
		<span class="lead">@p.Description</span>
	</div>
}

<div>
	@Html.PageLinks(Model.PagingInfo, x => Url.Action("List", new { category = Model.CurrentCategory, page = x }))
</div>
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}